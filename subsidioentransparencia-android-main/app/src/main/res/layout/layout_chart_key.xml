<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/colorKey"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@id/valueText"
        app:layout_constraintTop_toTopOf="@id/valueText"
        app:layout_constraintBottom_toBottomOf="@id/valueText"
        />

    <TextView
        android:id="@+id/valueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:font="@font/montserrat_bold"
        android:paddingStart="5dp"
        tools:text="$1,000,000.00"
        android:textColor="@color/gob_pink"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/colorKey" />

    <TextView
        android:id="@+id/labelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:font="@font/montserrat_bold"
        android:text="Monto Federal"
        android:textColor="@color/gob_dark"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/valueText"
        app:layout_constraintStart_toStartOf="@id/colorKey"
        app:layout_constraintTop_toBottomOf="@id/valueText" />


</androidx.constraintlayout.widget.ConstraintLayout>